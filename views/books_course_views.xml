<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="books_course_view_tree" model="ir.ui.view">
    <field name="name">books.course.view.tree</field>
    <field name="model">books.course</field>
    <field name="arch" type="xml">
      <tree string="Books">
        <field name="title"></field>
        <field name="author"></field>
      </tree>
    </field>
  </record>

  <record id="books_course_view_form" model="ir.ui.view">
    <field name="name">books.course.view.form</field>
    <field name="model">books.course</field>
    <field name="arch" type="xml">
      <form string="Book">
        <group>
          <field name="title"></field>
          <field name="author"></field>
        </group>
        <notebook>
          <page string="Courses">
            <field name="courses_id"></field>
          </page>
        </notebook>
      </form>
    </field>
  </record>

  <record id="books_course_view_search" model="ir.ui.view">
    <field name="name">books.course.view.search</field>
    <field name="model">books.course</field>
    <field name="arch" type="xml">
      <search string="Books">
        <field name="title"></field>
        <field name="author"></field>
      </search>
    </field>
  </record>


</odoo>